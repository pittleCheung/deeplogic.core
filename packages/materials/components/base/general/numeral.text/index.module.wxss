.numeral-text {
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: 'DigitalNumbersRegular';
  font-size: 12px;
  color: #4aad64;
  min-width: 40px;
  text-align: center;
  min-height: 20px;
  margin: 0 2px;
  height: auto;
  background: linear-gradient(180deg, rgba(28, 28, 28, 0.8) 0%, rgba(33, 33, 33, 0.3) 100%);
  border-radius: 2px;
  padding: 0 8px;
  box-sizing: border-box;
  border: 1px solid ;
  border-color: rgba(255, 255, 255, 0.45);
}
